<section class="low-stocks">
    <div class="low-stocks-header">
        <h3>Low Inventory</h3>
    </div>
    <div class="low-stocks-table-container">
        <table class="low-stocks-table">
            <thead>
            <tr>
                <th>SKU</th>
                <th>Name</th>
                <th>Qty.</th>
            </tr>
            </thead>
            <tbody id="low-stocks-body">
            <tr>
                <td colspan="3">Loading...</td>
            </tr>
            </tbody>
        </table>
    </div>

    <a href="/collections" class="link">Go to Inventory â†’</a>
</section>

<script>
    $(document).ready(function () {
        $.ajax({
            url: '/api/stocks',
            method: 'GET',
            success: function (data) {
                const tbody = $('#low-stocks-body');
                tbody.empty();
                data.forEach(item => {
                    const row = `<tr>
                    <td>${item.sku}</td>
                    <td>${item.name}</td>
                    <td>${item.stocks}</td>
                </tr>`;
                    tbody.append(row);
                });
            },
            error: function (err) {
                console.error('Error fetching low stocks:', err);
                const tbody = $('#low-stocks-body');
                tbody.append('<tr><td colspan="3">Error loading data</td></tr>');
            }
        });
    });
</script>